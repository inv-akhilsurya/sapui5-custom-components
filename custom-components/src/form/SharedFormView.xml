<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.m.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">

    <Page title="{i18n>CREATE_USER_TITLE}">
        <l:VerticalLayout>
            <f:SimpleForm editable="true">
                <f:content>
                    <Label text="{i18n>USERNAME}" />
                    <Input id="username" value="{username}" />
                    <Label text="{i18n>PASSWORD}" />
                    <Input id="password" type="Password" value="{password}" />
                    <Label text="{i18n>EMAIL}" />
                    <Input id="email" value="{email}" />
                    <Label text="{i18n>FIRST_NAME}" />
                    <Input id="firstName" value="{firstName}" />
                    <Label text="{i18n>LAST_NAME}" />
                    <Input id="lastName" value="{lastName}" />
                </f:content>
            </f:SimpleForm>
            <Button text="{i18n>CREATE_USER}" press="onCreateUser" />
        </l:VerticalLayout>
    </Page>

</mvc:View>
